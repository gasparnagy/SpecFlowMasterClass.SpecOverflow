    <PackageReference Include="SpecFlow" Version="3.9.74" />
    <PackageReference Include="CucumberExpressions.SpecFlow.3-9" Version="1.0.7" />

    <!-- SpecFlow+ LivingDoc -->
    <PackageReference Include="SpecFlow.Plus.LivingDocPlugin" Version="3.9.57" />

    <!-- packages for testing ASP.NET Core Apps -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="6.0.6" />

    <!-- Selenium -->
    <PackageReference Include="Selenium.WebDriver" Version="4.6.0" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="107.0.5304.6200" />

	  <!-- testing utilities -->
    <PackageReference Include="FluentAssertions" Version="6.8.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="**\.gitkeep" />
